<Window x:Class="IvanProyecto.Orientacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orientacion" Height="200" Width="179" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bIzqu" Content="&lt;" Grid.Row="1" Click="Button_Click_1" />
        <Button x:Name="bArriba" Content="^" Grid.Column="1" Click="Button_Click"/>
        <Button x:Name="bDer" Content="&gt;" Grid.Column="2" Grid.Row="1" Click="Button_Click_3"  />
        <Button x:Name="bAba" Content="V" Grid.Row="2" Grid.Column="1" Click="Button_Click_2" />
        <Label x:Name="label" Content="Selecciona dirección" Margin="23,10,23,14" Grid.Row="3" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
